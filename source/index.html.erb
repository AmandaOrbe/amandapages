---
title: Le Wagon - Middleman
---

<div id="home">
  <div class="home-content">
    <br>
   <h1>My selected pages</h1>
   <br>
     <div class="cards">
      <div class="row">
        <%data.pages.each do |page|%>
          <div class="col-xs-12 col-sm-6  col-md-4">
            <div class="card square">
              <div class="card-title">
                <h3><%= page[1].first[1].title%></h3>
              </div>
              <% link_to "/#{page[0]}.html" do %>
                <div class="image-card-frame">
                    <%= image_tag page[1].first[1].image,  class: "image-card" %>
                </div>
                <% end %>
                <div class="card-footer">

                <p><span class="red">by</span> <%= page[1].first[1].autor%></p>
                <div class="card-tags">
                <%page[1].first[1].tags.each do |tag|%>
                 <li class="list-inline"><%= tag %></li>
                 <% end %>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
